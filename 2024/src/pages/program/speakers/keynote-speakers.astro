---
import DefaultLayout from '../../../layouts/DefaultLayout.astro'
import { getCollection } from 'astro:content'
import { Picture } from 'astro-imagetools/components'
import { Icon } from 'astro-icon'

const speakers = await getCollection('speakers', ({ data }) => {
  return data.listed == true
})
---

<DefaultLayout title="Keynote Speakers">
  <section class="my-12">
    <div class="container">
      <h1>Keynote Speakers</h1>
    </div>
  </section>
  <section>
      {
        speakers.map((speaker) => (
          <div class="container">
            <h2>{speaker.data.name}</h2>
            <a href={speaker.data.slug}>
              <Picture
                src={speaker.data.avatar}
                alt={speaker.data.name + ' profile photo'}
                height="250"
                width="250"
                layout="constrained"
                fadeInTransition={false}
                attributes={{
                  img: {
                    class: 'rounded-3xl border-4',
                  },
                }}
              />
            </a>
            <section class="my-6">
              <Fragment set:html={speaker.data.biography} />
            </section>     
          </div>
        ))
      }
  </section>
  <section class="container">
  <strong>More keynote speakers to be announced soon!</strong>
  </section>

</DefaultLayout>
