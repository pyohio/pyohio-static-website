---
import Navigation from '../components/Navigation.astro'
import { SkipLinks } from 'accessible-astro-components'
import { Icon } from 'astro-icon'
---

<header>
  <SkipLinks />
  <Navigation>
    <li class="menu-item">
      <a href="/2024">Home</a>
    </li>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">About</button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/2024/speakers/">Speakers</a>
        </li>
        <li class="submenu-item">
          <a href="/2024/code-of-conduct">Code of Conduct</a>
        </li>
        <li class="submenu-item">
          <a href="/2024/about/conference-friends">Conference Friends</a>
        </li>
      </ul>
    </li>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">Program</button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/2024/talks/schedule/">Schedule</a>
        </li>
        <li class="submenu-item">
          <a href="/2024/talks/video/">Video Stream</a>
        </li>
        <li class="submenu-item">
          <a href="/2024/discord/">Conversation on Discord</a>
        </li>
      </ul>
    </li>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">Speaking</button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/2024/speaking/speaker-info">Information for Speakers</a>
        </li>
        <li class="submenu-item">CFP is now closed</li>
      </ul>
    </li>
    <!-- <li class="menu-item">
      <a href="https://www.customink.com/fundraising/pyohio-2023">Order T-shirts!</a>
    </li> -->
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [astro-icon] {
        margin-top: -4px;
        width: 30px;

        path {
          fill: var(--action-color);
          transition: fill 0.2s ease-in-out;
        }
      }

      &:hover {
        [astro-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
