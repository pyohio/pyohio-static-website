---
import { Icon } from 'astro-icon/components'
import { SITE_CONFIG, getEventDateInfo } from '../utils/constants'

const baseUrl = import.meta.env.BASE_URL
const dateInfo = getEventDateInfo()

const { src = `${baseUrl}/pyohio-2025-sticker.png` } = Astro.props
---

<section class="hero my-12">
  <div class="container">
    <div class="items-top grid grid-cols-1 gap-24 lg:grid-cols-2">
      <div class="flex flex-col items-center gap-8 md:items-start">
        <!-- Mobile-only Schedule button at very top -->
        <div class="flex justify-center md:hidden w-full">
          <a href="/2025/program/schedule" class="button has-icon color-primary hero-button leading-tight">
            <Icon name="mdi:calendar-clock" />
            View Schedule
          </a>
        </div>
        
        <h1 class="text-center text-6xl md:text-left lg:text-7xl">
          <slot><span class="text-gradient">{SITE_CONFIG.eventName}</span></slot>
        </h1>
        <h2 class="text-center text-3xl md:text-left">The Python Community Conference Based in Ohio</h2>
        
        <div class="flex flex-col gap-3 min-[500px]:flex-row">
          <!-- <a class="button has-icon" href="https://github.com/incluud/accessible-astro-starter">
            <Icon name="ion:star-outline" />
            Star on GitHub
          </a>
          <a class="button has-icon color-secondary" href="https://accessible-astro.incluud.dev/">
            <Icon name="ion:bookmark-outline" />
            Read the Docs
          </a> -->
          <p class="mb-2 text-xl">
            The {dateInfo.currentYear} annual PyOhio is Sat & Sun {dateInfo.ampersandRange}<br />at the Cleveland
            State University Student Center<br /> in Cleveland, OH
          </p>
        </div>

        <p>
          PyOhio is FREE to attend thanks to the generous support of our <a href="/2025/sponsors/">sponsors</a> and <a
            href="/2025/sponsors/individual-sponsors">individual donors</a
          >.
        </p>
        <div class="grid grid-cols-1 gap-3 min-[500px]:grid-cols-2 max-w-md">
          <a href="/2025/attend/registration" class="button has-icon color-primary hero-button leading-tight">
            <Icon name="mdi:ticket" />
            Register Now
          </a>
          <a href="/2025/program/schedule" class="button has-icon color-primary hero-button leading-tight hidden md:block">
            <Icon name="mdi:calendar-clock" />
            View Schedule
          </a>
          <a href="/2025/attend/shirts" class="button has-icon color-primary hero-button leading-tight">
            <Icon name="mdi:tshirt-crew" />
            Order Shirts
          </a>
          <a href="https://newsletter.pyohio.org/" class="button has-icon color-primary hero-button leading-tight">
            <Icon name="mdi:email" />
            Get Newsletter
          </a>
        </div>
      </div>
      <img class="hidden lg:block" width="400" src={src} alt="" decoding="async" />
    </div>
    <div>
      <p class="my-4">
        Please review our <a href="/2025/about/health-and-safety" class="text-primary-500 hover:underline"
          >Health & Safety Guidelines</a
        > and <a href="/2025/about/code-of-conduct" class="text-primary-500 hover:underline">Code of Conduct</a>.
      </p>
    </div>
  </div>
</section>

<style lang="scss">
  .text-gradient {
    background: linear-gradient(315deg, var(--primary-200) 25%, var(--secondary-500));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  :global(.darkmode .text-gradient) {
    background: linear-gradient(315deg, var(--primary-200) 25%, var(--secondary-400));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  :global(.hero-button) {
    padding-right: 1rem !important;
    padding-left: 1rem !important;
    white-space: nowrap !important;
  }
</style>
